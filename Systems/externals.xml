<?xml version="1.0"?>


<system name="External Components">

    <property>fcs/canopy-control</property>
    <property>fcs/blister-cmd-norm</property>
    <property>/controls/flight/cowl-flap</property>
    <channel name="Externals">
       <!-- <switch name="Canopy Cmd Norm">
                <default value="0"/>
                <test  logic="AND" value="1">
                    /controls/gear/brake-parking == 1
                    fcs/canopy-control == 1
                </test>
        </switch>-->


        <kinematic name="Blister Pos Norm">
            <input>fcs/blister-cmd-norm</input>
            <traverse>
                <setting>
                    <position>0</position>
                    <time>0</time>
                </setting>
                <setting>
                    <position>1</position>
                    <time>10</time>
                </setting>
            </traverse>
        </kinematic>

        <pure_gain name="Blister Pos">
            <input>fcs/blister-pos-norm</input>
            <gain>1</gain>
            <output>/surface-positions/blister-gauche-pos-norm</output>
            <output>/surface-positions/blister-droite-pos-norm</output>
        </pure_gain>

        <switch name="Cowl Flap Cmd Norm">
                <default value="0"/>
                <test  logic="OR" value="1">
                    propulsion/engine[0]/map-inhg gt 40
                    propulsion/engine[1]/map-inhg gt 40
                </test>
                <test  logic="AND" value="1">
                    /controls/flight/cowl-flap == 1
                </test>
        </switch>

        <kinematic name="Cowl Flap Control">
            <input>fcs/cowl-flap-cmd-norm</input>
            <traverse>
                    <setting>
                            <position>0</position>
                            <time>0</time>
                    </setting>
                    <setting>
                            <position>1</position>
                            <time>2</time>
                    </setting>
            </traverse>
            <output>/surface-positions/cowl-flap-pos-norm</output>
        </kinematic>


     </channel>




</system>
