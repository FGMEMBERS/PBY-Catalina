<?xml version="1.0"?>
<PropertyList>

<!--
    Usable with FlightGear
   
-->
   <!--             Auteur :      Gerard ROBIN                       COPYRIGHT  2007-->





 <path>fluxFG_N.osgx</path>

    <offsets>
        <x-m>0</x-m>
        <y-m>0</y-m>
        <z-m>-0</z-m>
        <pitch-deg>0</pitch-deg>
        <heading-deg>0</heading-deg>
        <roll-deg>0</roll-deg>
    </offsets>


    <animation>
        <type>select</type>
        <object-name>fluxFG</object-name>
        <condition>
            <and>
                <equals>
                    <property>surface-positions/floats-pos-norm</property>
                    <value>1.0</value>
                </equals>
                <equals>
                    <property>/fdm/jsbsim/fcs/left-float-wake-control</property>
                    <value>1</value>
                </equals>
            </and>
        </condition>
    </animation>


    <animation>
        <type>rotate</type>
        <object-name>fluxFG</object-name>
        <property>orientation/pitch-deg</property>
        <factor>-1.0</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>





</PropertyList>
