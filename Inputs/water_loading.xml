<?xml version="1.0"?>



<PropertyList>
  <name>Water Level</name>
  <layout>vbox</layout>

  <text>
        <label>======Water Level Loaded======</label>
  </text>

  <hrule/>

  <group>
        <layout>vbox</layout>
        <halign>center</halign>
        <button>
            <legend>Close</legend>
            <default>true</default>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>
    
    <hrule/>

    <group>
            <layout>hbox</layout>
            <halign>center</halign>
            <text>
                <x>10</x>
                 <y>40</y>
                <label>QTY LEVEL:</label>
            </text>
    </group>
    <group>
        <layout>hbox</layout>
        <input>
            <live>true</live>
            <property>/fdm/jsbsim/fcs/water-qty-liters</property>
            <x>10</x>
            <y>70</y>
            <color>
                <red>1.0</red>
                <green>0.80</green>
                <blue>0.80</blue>
            </color>
        </input>
    </group>
    <group>
        <layout>hbox</layout>
        <halign>center</halign>
        <text>
            <x>10</x>
            <y>100</y>
            <label>MAX 4530 LITERS</label>
        </text>
    </group>
    <group>
        <layout>hbox</layout>
        <halign>center</halign>
        <input>
            <live>true</live>
            <property>/fdm/jsbsim/systems/water-tank-filled</property>
            <color>
                <red>0.0</red>
                <green>1.0</green>
                <blue>0.0</blue>
            </color>
        </input>
    </group>
    
    

</PropertyList>
