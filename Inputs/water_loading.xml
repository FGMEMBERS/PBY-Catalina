<?xml version="1.0"?>

<PropertyList>
  <name>Water Bombing</name>
  <layout>vbox</layout>

  <text>
    <label>Water Bombing</label>
  </text>

  <hrule/>

  <group>
    <layout>hbox</layout>
    <text>
      <halign>right</halign>
      <label>Water Quantity (max 4530 liters):</label>
    </text>
    <input>
      <live>true</live>
      <property>/fdm/jsbsim/fcs/water-qty-liters</property>
    </input>
  </group>

  <group>
    <layout>hbox</layout>
    <halign>center</halign>
    <button>
      <legend>Load</legend>
      <binding>
        <command>nasal</command>
        <script>
          setprop("/sim/model/waterloading", 1);
          setprop("/sim/model/bomb-signal", 0);
          setprop("/sim/model/waterbombing", 0);
        </script>
      </binding>
    </button>
    <button>
      <legend>Drop</legend>
      <binding>
        <command>nasal</command>
        <script>
          setprop("/sim/model/waterloading", 0);
          setprop("/sim/model/bomb-signal", 1);
          setprop("/sim/model/waterbombing", 1);
        </script>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>
    <layout>vbox</layout>
    <halign>center</halign>
    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

</PropertyList>
